<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mudiir.Login_screen">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/logo"
        android:layout_height="@dimen/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margintopmid"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tv_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margintopsmall"
        android:text="@string/saleslogin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title" />

    <EditText
        android:id="@+id/et_username"
        style="@style/MyeditText"
        android:layout_width="@dimen/loginwidth"
        android:layout_height="@dimen/loginheight"
        android:layout_below="@+id/tv_sale"
        android:hint="@string/username" />

    <EditText
        android:id="@+id/et_password"
        style="@style/MyeditText"
        android:layout_width="@dimen/loginwidth"
        android:layout_height="@dimen/loginheight"
        android:layout_below="@+id/et_username"
        android:hint="@string/password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/loginwidth"
        android:layout_height="@dimen/loginheight"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margintopsmall"
        android:background="@drawable/button_blue"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/txtsmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margintopsmall"
        android:text="@string/forgotpass"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title" />


    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margintopmid"
        android:gravity="center"
        android:orientation="horizontal" />
</RelativeLayout>
